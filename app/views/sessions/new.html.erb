<div class="login-wrapper d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f1f3f5;">
  <div class="card shadow-lg border-0 rounded-4 px-4 py-3" style="width: 100%; max-width: 400px;">
    <div class="card-header bg-primary text-white text-center rounded-3 mb-3">

      <h2 class="h4 fw-bold mb-0">
        <i class="fas fa-sign-in-alt me-2"></i> Login
      </h2>
    </div>

    <div class="card-body px-1">
      <%= form_with url: login_path, method: :post, local: true do |form| %>
        <div class="form-group mb-3">
          <%= form.label :email, "Email", class: "form-label fw-semibold" %>
          <%= form.email_field :email, class: "form-control", required: true, placeholder: "Enter your email" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :password, "Password", class: "form-label fw-semibold" %>
          <%= form.password_field :password, class: "form-control", required: true, placeholder: "Enter your password" %>
        </div>

        <div class="d-grid mt-4">
          <%= form.submit "Login", class: "btn btn-primary btn-lg fw-semibold" %>
        </div>
      <% end %>
    </div>

    <div class="card-footer bg-white text-center mt-3 rounded-3">
      <%= link_to "← Back to Homepage", root_path, class: "text-decoration-none text-muted small" %>
    </div>
  </div>
</div>
